{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conversation Starters Config",
  "type": "object",
  "required": ["version", "generalFallback", "sets"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "updated": { "type": "string" },
    "generalFallback": {
      "type": "array",
      "items": { "$ref": "#/definitions/starter" }
    },
    "sets": {
      "type": "array",
      "items": { "$ref": "#/definitions/set" }
    }
  },
  "definitions": {
    "starter": {
      "type": "object",
      "required": ["id", "label", "prompt", "complexity"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "prompt": { "type": "string" },
        "complexity": { "type": "string", "enum": ["Simple", "Moderate", "Advanced"] },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "set": {
      "type": "object",
      "required": ["agentIds", "starters"],
      "properties": {
        "agentIds": { "type": "array", "items": { "type": "string" } },
        "starters": { "type": "array", "items": { "$ref": "#/definitions/starter" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
